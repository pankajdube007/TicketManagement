@model TicketManagement.Reposistory.RoleMaster
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}


<div class="col-md-6 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Edit Role</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SLNO)

                <div class="form-group">
                    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("Status", htmlAttributes: new { @class = "control-label" })
                    @Html.CheckBox("IsActive", Model.IsActive ?? false)
                    @*@Html.CheckBoxFor(model => model.IsActive.Value, new { @checked = "checked" })*@
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <a href="/RoleMaster/Index" class="btn btn-round btn btn-primary"> Back to List</a>
                    <button class="btn btn-round btn btn-success" type="submit">Submit</button>
                </div>

            }

        </div>
    </div>
</div>

<script src="~/Scripts/ValidationScript/role.validate.js"></script>
