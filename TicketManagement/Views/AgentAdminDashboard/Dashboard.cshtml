@section customscripts{
    <script src="/Template/vendors/raphael/raphael.min.js"></script>
    <script src="/Template/vendors/morris.js/morris.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            var dataresponse = "";

            $.ajax({
                type: "POST",
                url: '/AgentAdminDashboard/ShowBarCharts',
                contentType: "application/json; charset=utf-8",
                success: function(result) {
                    dataresponse = result;
                      if (dataresponse != null && dataresponse !="") {
                        Morris.Bar({
                            element: 'morris-bar-chart',
                            data: dataresponse,
                            xkey: 'y',
                            ykeys: ['a', 'b'],
                            lineColors: ['#26B99A', '#34495E'],
                            labels: ['New Ticket', 'Resolved'],
                            hideHover: 'auto',
                            resize: true
                        });
                    }
                },
                error: function(xhr, status, p3, p4) {
                    var err = "Error " + " " + status + " " + p3 + " " + p4;
                    if (xhr.responseText && xhr.responseText[0] == "{")
                        err = JSON.parse(xhr.responseText).Message;
                    console.log(err);
                }
            });

            $.ajax({
                type: "POST",
                url: '/AgentAdminDashboard/ShowDonutCharts',
                contentType: "application/json; charset=utf-8",
                success: function(result) {
                    dataresponse = result;
                      if (dataresponse != null && dataresponse !="") {
                        Morris.Donut({
                            element: 'morris-donut-chart',
                            colors: ['#3498DB', '#1ABB9C', '#9B59B6', '#9CC2CB', '#E74C3C'],
                            data: dataresponse,
                            resize: true
                        });
                    }
                },
                error: function(xhr, status, p3, p4) {
                    var err = "Error " + " " + status + " " + p3 + " " + p4;
                    if (xhr.responseText && xhr.responseText[0] == "{")
                        err = JSON.parse(xhr.responseText).Message;
                    console.log(err);
                }
            });


        });

    </script>
    }